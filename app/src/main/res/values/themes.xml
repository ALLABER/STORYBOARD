<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.STORYBOARD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_light_deep_orange_500</item>
        <item name="colorOnPrimary">@color/color_light_deep_orange_700</item>
        <item name="colorSecondary">@color/color_light_deep_orange_500</item>
        <item name="colorOnSecondary">@color/color_light_deep_orange_500</item>
        <item name="android:statusBarColor">@color/color_light_deep_orange_700</item>
        <item name="android:colorBackground">@color/color_light_background</item>
        <item name="android:actionBarStyle">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/color_light_background</item>
        <item name="android:textColorSecondary">@color/color_light_background</item>
        <item name="android:background">@color/color_light_background</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_light_splash_screen</item>
        <item name="colorPrimaryDark">@color/color_light_splash_screen</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:colorBackground">@color/color_light_splash_screen</item>
        <item name="android:navigationBarColor">@color/color_light_splash_screen</item>
    </style>
</resources>